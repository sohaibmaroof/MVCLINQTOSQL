<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVCLINTOSQL</title>
    <link href="@Styles.Url("~/Content/css")" rel="stylesheet" type="text/css" media="(min-width: 1024px)" />
    <link href="@Styles.Url("http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css")" rel="stylesheet" type="text/css" media="only screen and (max-width: 965px), (min-width: 965px) and (max-width: 1024px)" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "")</li>
                    <li>@Html.ActionLink("About", "Index", "")</li>
                    <li>@Html.ActionLink("Contact", "Index", "")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" >
        @RenderBody()
        <hr />
        <footer data-role="footer">
            <p>&copy; @DateTime.Now.Year - MVCLINTOSQL Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js")
    @Scripts.Render("~/bundles/bootstrap")
  
    @RenderSection("scripts", required: false)
</body>
</html>
